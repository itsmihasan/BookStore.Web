@model BookStore.Web.Models.Shelf

@{
    ViewData["Title"] = "Details";
}
<div class="container">

    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h2>Shelf Detail</h2>

            <div>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Code)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Code)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Rack)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Rack.RackId)
                    </dd>
                </dl>
            </div>
            <div class="form-group text-center mt-4">
                <a asp-action="Index" class="btn btn-primary"> <i class="bi bi-arrow-left"></i></a>
            </div>
        </div>

    </div>
</div>

