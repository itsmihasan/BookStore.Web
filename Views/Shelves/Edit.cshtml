@model BookStore.Web.Models.Shelf

@{
    ViewData["Title"] = "Edit";
}

<div class="container">

    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h2>Edit Shelf</h2>


            <hr />
            <div class="row">
                <div class="col">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="ShelfId" />
                        <div class="form-group">
                            <label asp-for="Code" class="control-label"></label>
                            <input asp-for="Code" class="form-control" />
                            <span asp-validation-for="Code" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="RackId" class="control-label">Rack</label>
                            <select asp-for="RackId" class="form-control" asp-items="ViewBag.RackId"></select>
                            <span asp-validation-for="RackId" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center mt-4">
                            <a asp-action="Index" class="btn btn-primary"> <i class="bi bi-arrow-left"></i></a>
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
