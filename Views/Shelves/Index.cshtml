@model IEnumerable<BookStore.Web.Models.Shelf>

@{
    ViewData["Title"] = "Index";
}
<div class="container">

    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-6">

                    <h2 class="mb-2">Shelf List</h2>
                </div>
                <div class="col-md-6" style="text-align:right">

                    <a asp-action="Create" class="btn btn-primary">Create New Shelf</a>

                </div>
                <hr />
            </div>

            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Code)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Rack)
                        </th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Code)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Rack.RackId)
                            </td>

                            <td>
                                <a asp-action="Edit" asp-route-id="@item.ShelfId"> <i class="bi bi-pencil-square"></i>Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.ShelfId"> <i class="bi bi-ticket-detailed-fill"></i>Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.ShelfId"><i class="bi bi-trash-fill"></i>Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-md-3"></div>

    </div>
</div>