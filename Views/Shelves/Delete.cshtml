@model BookStore.Web.Models.Shelf

@{
    ViewData["Title"] = "Delete";
}
<div class="container">

    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h2>Delete Shelf</h2>

            <div>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Code)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Code)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Rack)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Rack.Code)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="ShelfId" />
                    <a asp-action="Index" class="btn btn-primary"> <i class="bi bi-arrow-left"></i></a> |
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </form>
            </div>



        </div>

    </div>
</div>

