@*@{
    ViewData["Title"] = "Books List";
}

<div class="container">
    <h2>Books List</h2>
    <table id="booksTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Book Name</th>
                <th>Author</th>
                <th>Year of Publish</th>
                <th>Rack</th>
                <th>Shelf</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Name</td>
                    <td>@book.Author</td>
                    <td>@book.YearOfPublish</td>
                    <td>@book.Rack</td>
                    <td>@book.Shelf</td>
                    <td>@book.Status</td>
                </tr>
            }
        </tbody>
    </table>
    <div id="totalPrice">Total Price: $0</div>
</div>

@section scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#booksTable').DataTable();

            // Calculate and display total price
            var totalPrice = 0;
            $('#booksTable tbody tr').each(function () {
                var price = parseInt($(this).find('td:eq(6)').text()); // Assuming price is in the 7th column
                totalPrice += price;
            });
            $('#totalPrice').text('Total Price: $' + totalPrice);
        });
    </script>
}*@

