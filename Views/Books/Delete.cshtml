@model BookStore.Web.Models.Book

@{
    ViewData["Title"] = "Delete";
}

<div class="container">

    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h2>Delete Book</h2>

            <div>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Code)
                    </dt>
                    <dd class="col-sm-10">
                        :&nbsp;@Html.DisplayFor(model => model.Code)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd class="col-sm-10">
                        :&nbsp;@Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Author)
                    </dt>
                    <dd class="col-sm-10">
                        :&nbsp;@Html.DisplayFor(model => model.Author)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.IsAvailable)
                    </dt>
                    <dd class="col-sm-10">
                        :&nbsp;@Html.DisplayFor(model => model.IsAvailable)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Price)
                    </dt>
                    <dd class="col-sm-10">
                        :&nbsp;@Html.DisplayFor(model => model.Price)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Shelf)
                    </dt>
                    <dd class="col-sm-10">
                        :&nbsp;@Html.DisplayFor(model => model.Shelf.Code)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Shelf.Rack)
                    </dt>
                    <dd class="col-sm-10">
                        :&nbsp;@Html.DisplayFor(model => model.Shelf.Rack.Code)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="BookId" />
                    <a asp-action="Index" class="btn btn-primary"><i class="bi bi-arrow-left"></i></a>&nbsp;|
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>
</div>